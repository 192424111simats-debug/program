#include<stdio.h>
int factorial(int);
int main()
{
    int num,fact;
    printf("enter a positive integer values:");
    scanf("%d",&num);
    fact=factorial(num);
    printf("\n factirual of %d =%5d\n",num,fact);
}
int factorial(int n)
{
    int result;
    if(n==0)
        return 1;
    else
        result=n*factorial(n-1);
    return result;
}
output:
enter a positive integer values:5

factirual of 5 =  120
